                                <script>
                                    $('#ttt-search').bind('input propertychange', function() {
                                        if ($(this).val().trim() != '') {
                                            $('#ttt-search-list').css({'display':'block'});
                                            $('#ttt-search-ul').html('');
                                            $.ajax({
                                                type: 'post',
                                                url: "{{:U('/Home/Index/search')}}",
                                                data: {
                                                    'name': $(this).val(),
                                                },
                                                success: function (data) {
                                                    var data = eval("("+data+")");
                                                    for (var i in data){
                                                        $('#ttt-search-ul').append('<li id="li'+data[i]['id']+'"><a href="{{:U(\"/Home/Homepage/index/u_id/'+data[i]['id']+'\")}}"><img src="/php/TP_Social/Public/upload/'+data[i]['head_image']+'" width="40px" height="40px"><span>'+data[i]['name']+'</span></a></li>');
                                                    }
                                                }
                                            });
                                        }else {
                                            $('#ttt-search-list').css({'display':'none'});
                                            $('#ttt-search-ul').html('');
                                        }
                                    });
                                </script>
