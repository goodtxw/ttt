                            <script>
                                function aSub(){
                                    var privacy = $('#choiceprivacy').val();
                                    var content = $('#e_textarea').val();
                                    var img = '';
                                    for (var i=0; i<sc.length; i++){
                                        if(sc[i] != 2){
                                            img += sc[i] + ',';
                                        }
                                    }
                                    if(content.trim().length > 240){
                                        layer.msg('状态字数不能超过240',{icon:5});
                                        return;
                                    }
                                    if (content.trim() != ''){
                                        $.ajax({
                                           type : 'post',
                                            url : "{{:U('/Home/Index/subArt')}}",
                                            data: {
                                                'img' : img,
                                                'content' : content,
                                                'privacy' : privacy
                                            },
                                            success : function($data) {
                                                if ($data == 'suc'){
                                                    window.location.reload();
                                                }else {
                                                     alert('sdfds');
                                                }
                                            }
                                        });
                                    }else {
                                        layer.msg('请输入内容在发表状态',{icon:5});
                                    }
                                }
                            </script>

