        <!--</div>-->
        <script>
//            <!--显示所有图片-->
            function showAllImg() {
                $('.willshow').toggle();
                $('#ttt-show-image').hide();
            }
//             显示评论
            function showpinglun(article_id){
                $('.ttt-pinglun-button-sub'+article_id).show();
                $('.ttt-pinglun-button-cal'+article_id).show();
                $('.ttt-pinglun-textarea'+article_id).height('70px').css({'padding-top':'8px'});
            }
//            隐藏评论
            function hidepinglun(article_id){
                $('.ttt-pinglun-button-sub'+article_id).hide();
                $('.ttt-pinglun-button-rep'+article_id).hide();
                $('.ttt-pinglun-button-cal'+article_id).hide();
                $('.ttt-pinglun-textarea-rep'+article_id).hide();
                $('.ttt-pinglun-textarea'+article_id).show().height('22px').css({'padding-top':'5px'});
            }

//            提交评论
            function subpinglun(article_id){
                var value = $('.ttt-pinglun-textarea'+article_id).val();
                if(value.length > 240) {
                    layer.msg('评论字数不得超过240个', {icon:5});
                    return;
                }
                if(value.trim() != ''){
                    $.ajax({
                        type : 'post',
                        url : "{{:U('/Home/Index/subComment')}}",
                        data : {
                            'article_id' : article_id,
                            'content' : value
                        },
                        success : function(data){
                            if (data == 'err'){
                                layer.alert('评论失败，请重新尝试', {icon : 5});
                            }else {
                                $('.social-content-'+article_id).append(data);
                                $('.ttt-pinglun-button-sub'+article_id).toggle();
                                $('.ttt-pinglun-button-cal'+article_id).toggle();
                                $('.ttt-pinglun-textarea'+article_id).height('20px').css({'padding-top':'5px'}).val('');
                            }
                        }
                    });
                }
            }

            // 回复评论
            function replayTopeople(comment_id, article_id){
                $('.ttt-pinglun-textarea'+article_id).hide();
                $('.ttt-pinglun-button-sub'+article_id).hide();
                $('.ttt-pinglun-button-cal'+article_id).show();
                $('.ttt-pinglun-textarea-rep'+article_id).show().val('回复'+$('.ttt-pinglun-name'+comment_id).html().trim()+': ');
                var len = $('.ttt-pinglun-textarea-rep'+article_id).val().length;
                // 移除其他事件
                $('.ttt-pinglun-button-rep'+article_id).unbind();
                $('.ttt-pinglun-button-rep'+article_id).show().click(function(){
                    var value = $('.ttt-pinglun-textarea-rep'+article_id).val();
                    if(value.length > 240) {
                        layer.msg('评论字数不得超过240个', {icon:5});
                        return;
                    }
                    if(value.trim() != '' && value.length > len){
                        $.ajax({
                            type : 'post',
                            url : "{{:U('/Home/Index/subComment')}}",
                            data : {
                                'article_id' : article_id,
                                'content' : value,
                                'comment_id' : comment_id
                            },
                            success : function(data){
                                if (data == 'err'){
                                    layer.alert('评论失败，请重新尝试', {icon : 5});
                                }else {
                                    $('.social-content-'+article_id).append(data);
                                    $('.ttt-pinglun-button-rep'+article_id).toggle();
                                    $('.ttt-pinglun-button-cal'+article_id).toggle();
                                    $('.ttt-pinglun-textarea-rep'+article_id).hide();
                                    $('.ttt-pinglun-textarea'+article_id).show().height('20px').css({'padding-top':'5px'}).val('');
                                }
                            }
                        });
                    }
                });
            }

            function dianzan(article_id,user_id){
                $.ajax({
                    type: 'post',
                    url : "{{:U('/Home/Index/dianZan')}}",
                    data: {
                        'article_id' : article_id,
                        'user_id' : user_id
                    },
                    success: function(data){
                        if(data == 'add'){
                            var num = parseInt($('.ttt-zan-num'+article_id).html()) + 1;
                            $('.ttt-zan-num'+article_id).html(num).css({'background-color':'red'});
                            $('.ttt-dianzan'+article_id).css({'background-color':'red'});
                        }else if(data == 'adderr') {
                            layer.msg('点赞失败', {icon:5});
                        }else if(data == 'del') {
                            var num = parseInt($('.ttt-zan-num'+article_id).html()) - 1;
                            $('.ttt-zan-num'+article_id).html(num).css({'background-color':'#fff'});
                            $('.ttt-dianzan'+article_id).css({'background-color':'#fff'});
                        }else if(data == 'delerr') {
                            layer.msg('取消点赞失败', {icon:5});
                        }
                    }
                });
            }

            function zhuanfa(article_id,user_id) {
                $.ajax({
                   type : 'post',
                    url: "{{:U('/Home/Index/zhuanZai')}}",
                    data: {
                        'article_id':article_id,
                        'user_id' : user_id
                    },
                    success: function(data){
                        var info  = eval("("+data+")");
                        if(info['image'].length > 0) {
                            var imageInfo = '';
                            for (var i = 0; i < info['image'].length; i++) {
                                imageInfo += "<img src='/php/TP_Social/Public/upload/" + info['image'][i]['name'] + "' width='220px' style='margin-right: 5px;margin-bottom: 5px;' />"
                            }
                            //页面层
                            layer.open({
                                type: 1,
                                title: false,
                                area: ['470px', '350px'], //宽高
                                btn: ['转载', '取消'],
                                content: '<div style="overflow-x:hidden;width: 470px;height: 300px"><textarea style="padding:10px;border:none;width: 460px;height: 100px" class="ttt-zz-qwe">' + '//' + info['user']['name'] + ': ' + info['content'] + '</textarea><div style="background-color:#dedede;padding-left: 7px;padding-right: 3px;"><hr/><span style="font-size: 20px;">' + info['user']['name'] + ': </span>' + info['content'] + '<hr style="background-color:black"/>' + imageInfo + '</div></div>',
                                success: function (layero) {
                                    var btn = layero.find('.layui-layer-btn');
                                    btn.find('.layui-layer-btn0').attr({
                                        onclick: 'zz('+article_id+','+user_id+')'
                                    });
                                }
                            });
                        }else {
                            //页面层
                            layer.open({
                                type: 1,
                                title: false,
                                area: ['470px', '220px'], //宽高
                                btn: ['转载', '取消'],
                                content: '<div style="overflow-x:hidden;width: 470px;height: 165px"><textarea  style="padding:10px;border:none;width: 460px;height: 100px" class="ttt-zz-qwe">' + '//' + info['user']['name'] + ':' + info['content'] + '</textarea><div style="background-color:#dedede;padding-left: 7px;padding-right: 3px;"><hr/><span style="font-size: 20px;">' + info['user']['name'] + ': </span>' + info['content'] + '<hr style="background-color:black"/></div></div>',
                                success: function (layero) {
                                    var btn = layero.find('.layui-layer-btn');
                                    btn.find('.layui-layer-btn0').attr({
                                        onclick: 'zz('+article_id+','+user_id+')'
                                    });
                                }
                            });
                        }
                    }
                });
            }

            // 转载写入数据库ajax
            function zz(article_id, user_id){
                var val = $('.ttt-zz-qwe').val();
                $.ajax({
                   type: 'post',
                    url: "{{:U('/Home/Index/subZz')}}",
                    data: {
                        'article_id':article_id,
                        'user_id' : user_id,
                        'content' : val
                    },
                    success : function(data){
                        if (data == 'suc'){
                            window.location.reload();
                            layer.alert('转载成功', {icon:6});
                        }else if(data == 'err'){
                            layer.msg('转载失败，请稍后重试', {icon:5});
                        }
                    }
                });
            }
        </script>


        <!--开启聊天栏-->
        <div class="ttt-chat-close ttt-chat-left-show">
            <a href="javascript:void(0)" onclick="$('.ttt-chat-left-show').hide();$('#ttt-chat-div').show();"><span class="glyphicon glyphicon-align-justify"></span></a>
            <span id="ttt-chat-message-hide-num">0</span>
        </div>
        <!--聊天栏-->
        <div id="ttt-chat-div" style="display: none;">
            <div class="ttt-chat-close ttt-chat-right">
                <a href="javascript:void(0)" onclick="$('#ttt-chat-div').hide();$('.ttt-chat-left-show').show();"><span class="glyphicon glyphicon-arrow-right"></span></a>
            </div>
            <div id="ttt-chat-tab">
                <ul>
                    <li id="ttt-chat-tab-cf" ><a href="javascript:void(0)"><i class="glyphicon glyphicon-user"></i> 好友</a></li>
                    <li id="ttt-chat-tab-sf" style="display: none"><span><i class="glyphicon glyphicon-user"></i> 好友</span></li>
                    <li id="ttt-chat-tab-ch" style="display: none"><a href="javascript:void(0)"><i class="glyphicon glyphicon-edit"></i> 会话</a></li>
                    <li id="ttt-chat-tab-sh" ><span><i class="glyphicon glyphicon-edit"></i> 会话</span></li>
                    <span id="ttt-chat-message-num">0</span>
                </ul>
            </div>
            <div class="ttt-chat-content ttt-friend">
                <ul>
                    <volist name="friend" id="fr">
                        <li class="ttt-friend-li{{$fr.id}}">
                            <a href="javascript:void(0)" ondblclick="clicktochat('{{$fr.id}}','{{$fr.name}}','{{$fr.head_image}}')">
                                <div>
                                    <img src="__PUBLIC__/upload/{{$fr.head_image}}">
                                </div>
                                <div>
                                    <p>{{$fr.name}}</p>
                                </div>
                            </a>
                        </li>
                    </volist>
                </ul>
            </div>
            <div class="ttt-chat-content ttt-chat-now">
                <ul>
                    <volist name="chatnow" id="chat">
                        <li class="ttt-chat-li{{$chat.User.id}}" onmousemove="showchatdelete('{{$chat.User.id}}')" onmouseout="hidechatdelete('{{$chat.User.id}}')" ondblclick="clicktochat('{{$chat.User.id}}','{{$chat.User.name}}','{{$chat.User.head_image}}')">
                            <a href="javascript:void(0)">
                                <div>
                                    <span class="ttt-chat-now-mark ttt-chat-now-mark{{$chat.User.id}}"></span>
                                    <img src="__PUBLIC__/upload/{{$chat.User.head_image}}">
                                </div>
                                <div>
                                    <p>{{$chat.User.name}}</p>
                                    <p class="ttt-chat-li-p{{$chat.User.id}}">{{$chat.content}}</p>
                                </div>
                                <div>
                                    <button class="ttt-chat-delete ttt-cd-{{$chat.User.id}}" onclick="removefromchatnow('{{$chat.User.id}}')" onmousemove="showchatdelete('{{$chat.User.id}}')" onmouseout="hidechatdelete('{{$chat.User.id}}')">x</button>
                                </div>
                            </a>
                        </li>
                    </volist>
                </ul>
            </div>
        </div>
        <script>
            var numberAll = {'0':0};

            $('#ttt-chat-div').css({'height':document.documentElement.clientHeight,'width':'200px'});

            function showchatdelete(num) {
                $('.ttt-cd-'+num).css({'display':'block'});
            }

            function hidechatdelete(num){
                $('.ttt-cd-'+num).css({'display':'none'});
            }

            $('#ttt-chat-tab-cf').click(function(){
                $('#ttt-chat-tab-cf').css({'display':'none'});
                $('#ttt-chat-tab-sf').css({'display':'block'});
                $('#ttt-chat-tab-ch').css({'display':'block'});
                $('#ttt-chat-tab-sh').css({'display':'none'});
                $('.ttt-chat-now').css({'display':'none'});
                $('.ttt-friend').css({'display':'block'});
            });
            $('#ttt-chat-tab-ch').click(function(){
                $('#ttt-chat-tab-cf').css({'display':'block'});
                $('#ttt-chat-tab-sf').css({'display':'none'});
                $('#ttt-chat-tab-ch').css({'display':'none'});
                $('#ttt-chat-tab-sh').css({'display':'block'});
                $('.ttt-chat-now').css({'display':'block'});
                $('.ttt-friend').css({'display':'none'});
            });

            function clicktochat(num, uname, uimg) {
                // 判断节点是否存在
                if($('.ttt-chat-li'+num).length > 0){
                    var dom = $('.ttt-chat-li'+num);
                    dom.remove();
                    $('.ttt-chat-now ul').prepend(dom);
                }else{
                    $.ajax({
                        url : "{{:U('/Home/Chat/chatNow')}}",
                        type : 'post',
                        data : {
                            'user_id' : num
                        },
                        success : function(data){
                            var data = eval("("+data+")");
                            var dom = '<li class="ttt-chat-li'+num+'" onmousemove="showchatdelete('+num+')" onmouseout="hidechatdelete('+num+')" ondblclick="clicktochat('+num+',\''+uname+'\',\''+uimg+'\')"><a href="javascript:void(0)"><div><span class="ttt-chat-now-mark ttt-chat-now-mark'+num+'"></span><img src="__PUBLIC__/upload/'+uimg+'"></div><div><p>'+uname+'</p><p class="ttt-chat-li-p'+num+'">'+data['content']+'</p></div><div><button class="ttt-chat-delete ttt-cd-'+num+'" onmousemove="showchatdelete('+num+')" onmouseout="hidechatdelete('+num+')">x</button></div></a></li>';
                            $('.ttt-chat-now ul').prepend(dom);
                        }
                    });
                }
                showchatwindow(num, uname, uimg);
            }

            // 显示聊天窗口
            function showchatwindow(user_id, uname, uimg){
                // 遍历聊天窗口 隐藏所有
                $('.ttt-chat-window').each(function(){
                    $(this).hide();
                });

                // 判断聊天窗口是否存在,不存在则创建   存在则显示
                if($('.ttt-chat-window'+user_id).length <= 0){
                    console.log(1432453254325)
                    createchatwindow(user_id, uname, uimg);
                }else {
                    $('.ttt-chat-window'+user_id).show();
                }
                // 判断打开的聊天窗口是否是发消息那个人的窗口
                if(numberAll[user_id]) {
                    // 未读信息条数减少
                    $('#ttt-chat-message-num').html((parseInt($('#ttt-chat-message-num').html()) - parseInt(numberAll[user_id])));
                    $('#ttt-chat-message-hide-num').html((parseInt($('#ttt-chat-message-hide-num').html()) - parseInt(numberAll[user_id])));
                    $('.ttt-chat-now-mark'+user_id).hide();
                    numberAll[user_id] = 0;
                    if (parseInt($('#ttt-chat-message-num').html()) == 0){
                        $('#ttt-chat-message-num').hide();
                        $('#ttt-chat-message-hide-num').hide();
                    }
                    // 将数据中的未读信息变为已读
                    $.ajax({
                        type : 'post',
                        url : "{{:U('/Home/Chat/changeMsgStatu')}}",
                        data : {
                            'from_id' : user_id,
                        }
                    })
                }
            }

            // 关闭聊天窗口
            function closechatwindow() {
                $('.ttt-chat-window').hide();
            }

            // 从正在聊天窗口中移除某个用户
            function removefromchatnow(num, event){
                console.log(4324);
                window.event? window.event.cancelBubble = true : event.stopPropagation();
            }

            // websocket
            var ws = new WebSocket('ws://192.168.20.144:8282');
            // 链接成功时
            ws.onopen = function(){
                var uid = '{{$user.id}}';
                var msg = {'type':'setuid','uid':uid};
                msg = JSON.stringify(msg);
                ws.send(msg);
            };

            // 接受服务器的回执信息
            ws.onmessage = function (evt)
            {
                var received_msg = eval("("+evt.data+")");
                // 判断聊天列表中有无该好友
                if($('.ttt-chat-li'+received_msg['from_id']).length <= 0){
                    $.ajax({
                        type : 'post',
                        url : "{{:U('/Home/Chat/chatNow')}}",
                        data : {
                            'user_id' : received_msg['from_id']
                        },
                        success : function(data){
                            var data = eval("("+data+")");
                            var dom = '<li class="ttt-chat-li'+received_msg['from_id']+'" onmousemove="showchatdelete('+received_msg['from_id']+')" onmouseout="hidechatdelete('+received_msg['from_id']+')" ondblclick="clicktochat('+received_msg['from_id']+',\''+received_msg['uname']+'\',\''+received_msg['img']+'\')"><a href="javascript:void(0)"><div><span class="ttt-chat-now-mark ttt-chat-now-mark'+received_msg['from_id']+'"></span><img src="__PUBLIC__/upload/'+received_msg['img']+'"></div><div><p>'+received_msg['uname']+'</p><p class="ttt-chat-li-p'+received_msg['from_id']+'">'+data['content']+'</p></div><div><button class="ttt-chat-delete ttt-cd-'+received_msg['from_id']+'" onmousemove="showchatdelete('+received_msg['from_id']+')" onmouseout="hidechatdelete('+received_msg['from_id']+')">x</button></div></a></li>';
                            $('.ttt-chat-now ul').prepend(dom);
                        }
                    });
                }
                // 判断聊天窗口是否存在
                if(($('.ttt-chat-window'+received_msg['from_id']).length) <= 0){
                    createchatwindow(received_msg['from_id'],received_msg['uname'],received_msg['img']);
                    $('.ttt-chat-window'+received_msg['from_id']).hide();
                }else {
                    // 更新
                    $('.ttt-chat-msg'+received_msg['from_id']).append('<div class="ttt-chat-msg-left"><img src="__PUBLIC__/upload/'+received_msg['img']+'"><div style=""><div >'+received_msg['content']+'</div></div></div>');
                }
                // 更新正在聊天最新信息
                $('.ttt-chat-li-p'+received_msg['from_id']).html(received_msg['content']);
                // 判断与该用户的聊天窗口是否是隐藏
                if ($('.ttt-chat-window'+received_msg['from_id']).is(":hidden")){
                    var n = parseInt($('#ttt-chat-message-num').html()) + 1;
                    $('#ttt-chat-message-num').html(n).show();
                    $('#ttt-chat-message-hide-num').html(n).show();

                    if (numberAll[received_msg['from_id']]){
                        numberAll[received_msg['from_id']] += 1;
                    }else{
                        numberAll[received_msg['from_id']] = 1;
                    }
                    $('.ttt-chat-now-mark'+received_msg['from_id']).show();
                }
            };

            // 发送信息
            function s(to_id, mes){
                if(mes.trim() != ''){
                    var a = {'type':'sentmsg','from_id':'{{$user.id}}','to_id':to_id,'content':mes, 'img':'{{$user.head_image}}', 'uname':'{{$user.name}}'};
                    a = JSON.stringify(a);
                    ws.send(a);
                    // 更新正在聊天最新信息
                    $('.ttt-chat-li-p'+to_id).html(mes);
                    // 将信息添加到信息展示区
                    $('.ttt-chat-msg'+to_id).append('<div class="ttt-chat-msg-right"><img src="__PUBLIC__/upload/'+'{{$user.head_image}}'+'"><div><div>'+mes+'</div></div></div>');
                    // 清空消息输入框
                    $('.ttt-chat-textarea'+to_id).val('');
                }
            }

            function createchatwindow(user_id, uname, uimg){
                var dWindow = $("<div class='ttt-chat-window ttt-chat-window"+user_id+"'></div>");
                var dTitle = $('<div class="ttt-chat-title ttt-chat-title'+user_id+'"><ul><li><i class="glyphicon glyphicon-link"></i><span class="ttt-chat-title-name ttt-chat-title-name'+user_id+'"></span></li><li><a href="javascript:void(0)"><span class="glyphicon glyphicon-remove" onclick="closechatwindow()"></span></a></li></ul></div>');
                var dM = $(' <div class="ttt-chat-msg ttt-chat-msg'+user_id+'"></div>');
                var dB = $('<div class="ttt-chat-input ttt-chat-input'+user_id+'"><textarea class="ttt-chat-textarea ttt-chat-textarea'+user_id+'" placeholder="请输入聊天信息..."></textarea></div>');
                var dV = $('<div class="ttt-chat-button ttt-chat-button'+user_id+'"><a class="ttt-chat-button-sub ttt-chat-button-sub'+user_id+'" href="javascript:void(0)">发送</a></div>');
                dWindow.append(dTitle).append(dM).append(dB).append(dV);
                $('body').append(dWindow);

                // 初始化设置
                var t = document.documentElement.clientHeight - $('.ttt-chat-window'+user_id).height();
                $('.ttt-chat-window'+user_id).css({'display':'block','right':'205px','top':t});
                $('.ttt-chat-title-name'+user_id).html(uname);
                $('.ttt-chat-textarea'+user_id).val();
                $.ajax({
                    url : "{{:U('/Home/Chat/search')}}",
                    type : 'post',
                    data : {
                        'user_id' : user_id
                    },
                    success : function(data){
                        var data = eval("("+data+")");
                        if(data.u_from_id == data.u_id){
                            var dom = '<div class="ttt-chat-msg-right"><img src="__PUBLIC__/upload/{{$user.head_image}}"><div style=""><div>'+data.content+'</div></div></div>';
                            // $('.ttt-chat-msg'+user_id).html(' ');
//                            var t = '<div class="ttt-chat-msg-time">- <span>'+new Date(parseInt(data.time) * 1000).toLocaleString().replace(/年|月/g, "-").replace(/日|下|午/g, " ")+'</span> -</div>';
                            $('.ttt-chat-msg'+user_id).prepend(dom);
//                            $('.ttt-chat-msg'+user_id).prepend(t);
                        }else {
                            var dom = '<div class="ttt-chat-msg-left"><img src="__PUBLIC__/upload/'+uimg+'"><div style=""><div >'+data.content+'</div></div></div>';
                            // $('.ttt-chat-msg'+user_id).html(' ');
//                            var t = '<div class="ttt-chat-msg-time">- <span>'+new Date(parseInt(data.time) * 1000).toLocaleString().replace(/年|月/g, "-").replace(/日|下|午/g, " ")+'</span> -</div>';
                            $('.ttt-chat-msg'+user_id).prepend(dom);
//                            $('.ttt-chat-msg'+user_id).prepend(t);

                        }
                        // 为发送按钮绑定事件
                        $('.ttt-chat-button-sub').click(function(){
                            s(user_id, $('.ttt-chat-textarea'+user_id).val());
                        });
                    }
                });
            }

            // 查看数据库的未读信息
            function messageNotRead(){
                $.ajax({
                    type : 'post',
                    url : "{{:U('/Home/Chat/messageNotRead')}}",
                    success : function(data){
                        var data = eval("("+data+")");
                        // 消息数量
                        var mesNum = data.length;
                        if (mesNum > 0){
                            for(var i=0; i<mesNum; i++){
                                // 判断正在聊天是否存在
                                if($('.ttt-chat-li'+data[i]['u_from_id']).length <= 0){
                                    var dom = '<li class="ttt-chat-li'+data[i]['u_from_id']+'" onmousemove="showchatdelete('+data[i]['u_from_id']+')" onmouseout="hidechatdelete('+data[i]['u_from_id']+')" ondblclick="clicktochat('+data[i]['u_from_id']+',\''+data[i]['User']['name']+'\',\''+data[i]['User']['head_image']+'\')"><a href="javascript:void(0)"><div><span class="ttt-chat-now-mark ttt-chat-now-mark'+data[i]['u_from_id']+'"></span><img src="__PUBLIC__/upload/'+data[i]['User']['head_image']+'"></div><div><p>'+data[i]['User']['name']+'</p><p class="ttt-chat-li-p'+data[i]['u_from_id']+'">'+data[i]['content']+'</p></div><div><button class="ttt-chat-delete ttt-cd-'+data[i]['u_from_id']+'" onmousemove="showchatdelete('+data[i]['u_from_id']+')" onmouseout="hidechatdelete('+data[i]['u_from_id']+')">x</button></div></a></li>';
                                    $('.ttt-chat-now ul').prepend(dom);
                                }else {
                                    $('.ttt-chat-li-p'+data[i]['u_from_id']).html(data[i]['content']);
                                    var dom = $('.ttt-chat-li'+data[i]['u_from_id']);
                                    dom.remove();
                                    $('.ttt-chat-now ul').prepend(dom);
                                }
                                $('.ttt-chat-now-mark'+data[i]['u_from_id']).show();
                                // 判断聊天窗口是否存在
                                if($('.ttt-chat-window'+data[i]['u_from_id']).length <= 0){
                                    createNotReadMes(data[i]['u_from_id'],data[i]['User']['name'],data[i]['User']['head_image'],data[i]['content']);
                                }else {
                                    var dom = '<div class="ttt-chat-msg-left"><img src="__PUBLIC__/upload/'+data[i]['User']['head_image']+'"><div style=""><div >'+data[i]['content']+'</div></div></div>';
                                    $('.ttt-chat-msg'+data[i]['u_from_id']).append(dom);
                                }
                                // 将信息条数存到数组  并显示共多少条数
                                var n = parseInt($('#ttt-chat-message-num').html()) + 1;
                                $('#ttt-chat-message-num').html(n).show();
                                $('#ttt-chat-message-hide-num').html(n).show();

                                if (numberAll[data[i]['u_from_id']]){
                                    numberAll[data[i]['u_from_id']] += 1;
                                }else{
                                    numberAll[data[i]['u_from_id']] = 1;
                                }
                            }
                        }

                    }
                })
            }
            function createNotReadMes(user_id, uname, uimg, content){

                var dWindow = $("<div class='ttt-chat-window ttt-chat-window"+user_id+"'></div>");
                var dTitle = $('<div class="ttt-chat-title ttt-chat-title'+user_id+'"><ul><li><i class="glyphicon glyphicon-link"></i><span class="ttt-chat-title-name ttt-chat-title-name'+user_id+'"></span></li><li><a href="javascript:void(0)"><span class="glyphicon glyphicon-remove" onclick="closechatwindow()"></span></a></li></ul></div>');
                var dM = $(' <div class="ttt-chat-msg ttt-chat-msg'+user_id+'"></div>');
                var dB = $('<div class="ttt-chat-input ttt-chat-input'+user_id+'"><textarea class="ttt-chat-textarea ttt-chat-textarea'+user_id+'" placeholder="请输入聊天信息..."></textarea></div>');
                var dV = $('<div class="ttt-chat-button ttt-chat-button'+user_id+'"><a class="ttt-chat-button-sub ttt-chat-button-sub'+user_id+'" href="javascript:void(0)">发送</a></div>');
                dWindow.append(dTitle).append(dM).append(dB).append(dV);
                $('body').append(dWindow);

                // 初始化设置
                var t = document.documentElement.clientHeight - $('.ttt-chat-window'+user_id).height();
                $('.ttt-chat-window'+user_id).css({'display':'block','right':'205px','top':t,'display':'none'});
                $('.ttt-chat-title-name'+user_id).html(uname);
                $('.ttt-chat-textarea'+user_id).val();

                var dom = '<div class="ttt-chat-msg-left"><img src="__PUBLIC__/upload/'+uimg+'"><div style=""><div >'+content+'</div></div></div>';
                $('.ttt-chat-msg'+user_id).append(dom);
                // 为发送按钮绑定事件
                $('.ttt-chat-button-sub').click(function(){
                    s(user_id, $('.ttt-chat-textarea'+user_id).val());
                });
            }
            messageNotRead();
        </script>
